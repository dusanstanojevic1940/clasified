<html t:type="Layout" t:title="Edit Global Settings" t:id="layout"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">


<t:AdminInnerNavigation t:selected="${'globalSettings'}"></t:AdminInnerNavigation>
<t:GlobalSettingsInnerNavigation style="margin-top:-20px;" t:selected="${'HomePage'}"></t:GlobalSettingsInnerNavigation>

<t:form t:id="loginForm">
	<t:errors />

	<t:label for="name" />
	<input t:type="textfield" t:id="name" name="Name" id="name" type="text" />
	<br />
	
	<t:label for="showAll">Home Page</t:label>
	
	<t:checkbox t:id="showAll" style="display:inline; margin-left:10px; vertical-align:middle;" />
	
	<br />
	
	<input type="submit" value="Create" style="margin-top: 15px;" />
</t:form>

</html>